<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/primary_color"
              android:gravity="center"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/toolbar_logo"
        android:layout_width="@dimen/toolbar_logo"
        android:layout_height="@dimen/toolbar_logo"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_book_white_48dp"/>

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="@dimen/toolbar_title"/>

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="@dimen/toolbar_icon"
        android:layout_height="@dimen/toolbar_icon"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_receipt_white_48dp"/>

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="@dimen/toolbar_icon"
        android:layout_height="@dimen/toolbar_icon"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_location_city_white_48dp"/>

    <ImageView
        android:id="@+id/icon3"
        android:layout_width="@dimen/toolbar_icon"
        android:layout_height="@dimen/toolbar_icon"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_account_circle_white_48dp"/>

</LinearLayout>